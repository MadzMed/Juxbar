<div class="container d-flex align-items-center justify-content-around">
    <div class="search_div d-flex align-items-center justify-content-around">
        <div class="d-inline-flex align-items-center justify-content-around">
            <div class="search_button">
                <i class="p-3 form_buttons fas fa-arrow-left"></i>
            </div>
            <div class="d-inline-flex">
                <div class="p-2 search_bar_form">
                    <input type="search" id="search_input" placeholder="Search" />
                </div>
            </div>
            <div class="d-inline-flex">
                <i class="p-3 form_buttons fas fa-bars"></i>
            </div>
        </div>
    </div>
</div>
<div class="map_container" id="map" style="width: 100vw; height: 60vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<div class=" col-xs-6" style=" height: 40vh; overflow: scroll; ">
    <% @sessions.each do |session| %>
    <%= link_to session_path(session.bar_id) do %>
    <div class="bar-card-index d-flex justify-content-center align-items-center">
        <div class="card-sessions-infos d-flex justify-content-around">
          <div></div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <h2>
                    <%= session.bar.name %>
                </h2>
                <h3>
                    <%= session.bar.address %>
                </h3>
                <p>
                    <%= session.description %>
                </p>
            </div>
            <div class= "d-flex justify-content-center align-items-center">
            <% if session.category == "latino"%>
            <div id="moncercle" class="moncercle-vert"></div>
            <% elsif session.category == "metal"%>
            <div id="moncercle" class="moncercle-noir"></div>
            <% elsif session.category == "techno"%>
            <div id="moncercle" class="moncercle-cyan"></div>
            <% elsif session.category == "dancehall"%>
            <div id="moncercle" class="moncercle-vert"></div>
            <% elsif session.category == "hip-hop"%>
            <div id="moncercle" class="moncercle-marron"></div>
            <% else %>
            <div></div>
            <% end %>
            </div>
        </div>

    </div>
    <% end %>
  <% end %>
</div>
