<div class="container d-flex align-items-center justify-content-around">
    <div class="search_div d-flex align-items-center justify-content-around">
        <div class="d-inline-flex align-items-center justify-content-around">
            <div class="search_button">
                <%= simple_form_for :filter, url: sessions_path, method: "GET", html: { class: 'form-inline' } do %>
                <div id="accordion_search_session_div">
                    <input type="search" name="search[query]" id="accordion_search_session" placeholder="Search" />
                </div>
                <% end %>
            </div>
            <div class="d-inline-flex">
                <i class="p-3 form_buttons fas fa-bars"></i>
            </div>
        </div>
    </div>
</div>
</div>
<div class="map_container " id="map" style="width: 100vw; height: 60vh; border-radius: 0px 0px 66px 66px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class=" col-xs-6" style=" height: 40vh; overflow: scroll; ">
    <% @sessions.each do |session| %>
    <%= link_to session_path(session.id) do %>
    <div class="bar-card-index d-flex justify-content-center align-items-center">
        <div class="card-sessions-infos d-flex">
            <div class="content-div-index d-flex flex-column">
                <h2>
                    <%= session.bar.name %>
                </h2>
                <!-- <p>
                    <%= session.description %>
                </p> -->
                <h3>
                    <%= session.bar.address.split(',').join("<br>").html_safe %>
                </h3>
            </div>
            <div class="icon d-flex align-items-center justify-content-space-between">
                <% if session.category == "latino"%>
                <div id="moncercle" class="moncercle-vert"></div>
                <% elsif session.category == "pop"%>
                <div id="moncercle" class="moncercle-noir"></div>
                <% elsif session.category == "pop"%>
                <div id="moncercle" class="moncercle-cyan"></div>
                <% elsif session.category == "dancehall"%>
                <div id="moncercle" class="moncercle-vert"></div>
                <% elsif session.category == "hip-hop"%>
                <div id="moncercle" class="moncercle-marron"></div>
                <% else %>
                <div></div>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>














